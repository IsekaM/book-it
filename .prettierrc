{
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": [".prettierrc", "*.json"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "*.php",
      "options": {
        "phpVersion": "8.1",
        "braceStyle": "psr-2",
        "tabWidth": 4

      }
    },
    {
      "files": ["*.php"],
      "options": {
        "printWidth": 80,
        "singleQuote": false,
        "trailingCommaPHP": true
      }
    }
  ]
}
